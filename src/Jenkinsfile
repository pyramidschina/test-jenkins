Jenkinsfile (Declarative Pipeline)

pipeline {

    agent any  //在任何可用的代理上执行这个 Pipeline 或其任意 stage

    stages {
        stage('Build') { //定义 "Build" stage
            steps {
                // 执行和 "Build" stage 相关的 st

            }
        }
        stage('Test') { // 定义  "Test" stage
            steps {
                // 执行和 "Test" stage 相关的 step
            }
        }
        stage('Deploy') {
            steps {
                //
            }
        }
    }
}